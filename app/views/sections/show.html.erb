<div class="container">
	<%= link_to("<< Back to List", {:action => 'index'}, 
		:class => 'back-link') %>

	<div class="row">
		<div class="sections show">
			<h2 class="text-center">Show Section</h2>

			<table class="table" summary="Section detail view">

				<tr>
					<th>Page ID</th>
					<td><%= @section.page_id %></td>
				</tr>
				<tr>
					<th>Name</th>
					<td><%= @section.name %></td>
				</tr>
				<tr>
					<th>Position</th>
					<td><%= @section.position %></td>
				</tr>
				<tr>
					<th>Content Type</th>
					<td><%= @section.content_type %></td>
				</tr>
				<tr>
					<th>Cotent</th>
					<td><%= @section.content %></td>
				</tr>
				<tr>
					<th>Visible?</th>
					<td><%= @section.visible ? 'true' : 'false' %></td>
				</tr>
				<tr>
					<th>Created</th>
					<td><%= @section.created_at %></td>
				</tr>
				<tr>
					<th>Updated</th>
					<td><%= @section.updated_at %></td>
				</tr>
			</table>
		</div>
	</div>
</div>